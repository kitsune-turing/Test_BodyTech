{
  "name": "taskmanager/task-service",
  "description": "Task management microservice with event publishing using Phalcon 4.x",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "ext-pdo": "*",
    "ext-redis": "*",
    "ext-json": "*",
    "tecnickcom/tcpdf": "^6.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "TaskService\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TaskService\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration"
  }
}
